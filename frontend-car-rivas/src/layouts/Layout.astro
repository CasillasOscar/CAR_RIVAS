---
import "../styles/global.css";
import logo from "../assets/logo-grey.png";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href={logo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>CAR RIVAS | Centro de alto rendimiento para futbolistas.</title>
    <meta
      name="description"
      content="Centro de alto rendimiento deportivo en Rivas Vaciamadrid para futbolistas. Entrenamiento funcional y de calistenia."
    />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
    --brand-green: oklch(0.55 0.18 145);
    --brand-green-dark: oklch(0.45 0.16 145);
  }
  html,
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    align-items: center;
    background-color: #fcfcfc;
    width: 100%;
    margin: 0;
    padding: 0;
	font-family: var(--font-sans);
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
