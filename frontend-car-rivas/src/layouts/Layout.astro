---
import "../styles/global.css";
import logo from "../assets/logo-grey.png";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { schema } from "../assets/data/schema_ld.js";
import TemporalLockPage from "../components/TemporalLockPage.astro";
const ACCESS_PASSWORD = "sadas*ofn@je432nowd213*sadsad";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href={logo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>CAR RIVAS | Centro de alto rendimiento para futbolistas.</title>
    <meta
      name="description"
      content="Centro de alto rendimiento deportivo en Rivas Vaciamadrid para futbolistas. Entrenamiento funcional y de calistenia."
    />
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body>
    <!--Modificar temporal lock -->
    <TemporalLockPage logo={logo} ACCESS_PASSWORD={ACCESS_PASSWORD} />
    <!--Modificar temporal lock div-->
    <div id="main-content" class="w-full flex flex-col min-h-screen">
      <Header />
      <main class="flex-1 w-full">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
    --brand-green: oklch(0.55 0.18 145);
    --brand-green-dark: oklch(0.45 0.16 145);
  }
  html,
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    align-items: center;
    background-color: #fcfcfc;
    width: 100%;
    margin: 0;
    padding: 0;
    font-family: var(--font-sans);
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
