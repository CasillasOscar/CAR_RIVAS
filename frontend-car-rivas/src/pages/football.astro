---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import heroImg from "../assets/facilities/IMG_6794.webp";
import { footballBenefits, footballFeatures, footballCoaches } from '../assets/data/football_page.js';
const URL_MAIN = import.meta.env.PUBLIC_BASE_URL;
---

<Layout>
    <section class="relative min-h-[80vh] lg:min-h-[90vh] flex items-center overflow-hidden" aria-labelledby="hero-title">
      <div class="absolute inset-0 z-0">
        <Image 
          src={heroImg} 
          alt="Jugador de fútbol entrenando en CAR RIVAS" 
          class="w-full h-full object-cover opacity-70"
          loading="eager"
        />
        <div class="absolute inset-0 bg-linear-to-r from-zinc-950 via-zinc-950/80 to-transparent"></div>
      </div>

      <div class="relative z-10 max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-28 w-full">
        <div class="max-w-xl lg:max-w-3xl">
          <nav class="mb-6 sm:mb-8" aria-label="Breadcrumb">
            <a href={URL_MAIN} class="inline-flex items-center gap-2 text-zinc-400 hover:text-white transition-colors group">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:-translate-x-1"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
              <span class="text-sm">Volver al inicio</span>
            </a>
          </nav>

          <header class="flex items-center gap-4 mb-5 sm:mb-6">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-brand-green flex items-center justify-center shadow-[0_0_20px_rgba(var(--brand-green-rgb),0.3)]">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sm:w-6 sm:h-6"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path><path d="M4 22h16"></path><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path></svg>
            </div>
            <span class="text-brand-green font-bold uppercase tracking-widest text-xs sm:text-sm">Alto Rendimiento Deportivo</span>
          </header>

          <h1 id="hero-title" class="text-3xl sm:text-5xl lg:text-7xl 2xl:text-8xl font-black text-white tracking-tighter mb-6 sm:mb-8 uppercase italic text-balance">
            Entrenamiento para <span class="text-brand-green">Futbolistas</span>
          </h1>

          <p class="text-base sm:text-lg lg:text-xl text-zinc-300 leading-relaxed mb-8 sm:mb-10 max-w-2xl">
            Programas especializados en fútbol profesional y formativo. Maximizamos tu explosividad, prevenimos lesiones y optimizamos tu recuperación.
          </p>

          <div class="flex flex-wrap gap-3 sm:gap-4">
            <a href={URL_MAIN + "#contact-form"} class="bg-brand-green hover:bg-brand-green-dark text-zinc-950 font-black px-5 py-3 sm:px-8 sm:py-4 rounded-md flex items-center gap-2 transition-all active:scale-95 shadow-lg shadow-green-900/20 text-sm sm:text-base">
              RESERVAR EVALUACIÓN
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 sm:py-24 lg:py-32 bg-white" aria-labelledby="benefits-title">
      <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 id="benefits-title" class="sr-only">Nuestros pilares de entrenamiento</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 lg:gap-8">
          {footballBenefits.map((benefit) => (
            <article class="p-6 sm:p-8 bg-zinc-50 rounded-2xl border border-zinc-200 transition-all group hover:border-brand-green hover:shadow-xl hover:shadow-zinc-200/50">
              <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-brand-green/10 flex items-center justify-center mb-5 sm:mb-6 text-brand-green-dark group-hover:scale-110 transition-transform" set:html={benefit.svg} />
              <h3 class="text-lg sm:text-xl font-bold text-zinc-900 mb-2 sm:mb-3 uppercase tracking-tight italic">{benefit.title}</h3>
              <p class="text-zinc-600 text-sm leading-relaxed">{benefit.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="py-16 sm:py-24 lg:py-32 bg-zinc-950" aria-labelledby="features-title">
      <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 sm:gap-16 items-center">
          <article>
            <h2 id="features-title" class="text-3xl sm:text-4xl lg:text-5xl font-black uppercase italic tracking-tighter mb-8 text-white">
              Metodología <span class="text-brand-green">CAR RIVAS</span>
            </h2>
            <ul class="space-y-3 sm:space-y-4" role="list">
              {footballFeatures.map((feature) => (
                <li class="flex items-center gap-3 p-3 sm:p-4 bg-zinc-900 rounded-xl shadow-sm border border-zinc-800">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="text-brand-green-dark shrink-0"><polyline points="20 6 9 17 4 12"></polyline></svg>
                  <span class="font-bold text-zinc-300 uppercase text-xs sm:text-sm tracking-wide">{feature}</span>
                </li>
              ))}
            </ul>
          </article>
          <div class="relative group aspect-4/3 lg:aspect-square">
            <Image 
              src={heroImg} 
              class="w-full h-full rounded-3xl shadow-2xl border-8 border-white object-cover transition-all duration-700" 
              alt="Sesión de entrenamiento específico de fútbol" 
            />
            <div class="absolute -bottom-4 -right-2 sm:-right-4 sm:-bottom-6 bg-brand-green p-4 sm:p-6 rounded-2xl shadow-xl">
               <p class="text-2xl sm:text-4xl font-black text-zinc-950 tracking-tighter italic">+200</p>
               <p class="text-[8px] sm:text-[10px] font-black text-zinc-950 uppercase tracking-widest">Atletas Élite</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="equipo" class="py-16 sm:py-24 lg:py-32 bg-zinc-100" aria-labelledby="staff-title">
      <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <header class="max-w-2xl mx-auto text-center mb-12 sm:mb-16 lg:mb-20">
          <h2 id="staff-title" class="text-3xl sm:text-4xl lg:text-5xl font-black uppercase italic tracking-tighter text-brand-green">
            Staff Técnico Especializado
          </h2>
          <p class="text-zinc-600 mt-4 max-w-xl mx-auto text-sm sm:text-base leading-relaxed">Nuestro equipo multidisciplinar garantiza una atención integral para el futbolista en todas sus fases.</p>
        </header>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-12 sm:gap-x-8 sm:gap-y-16">
          {footballCoaches.map((coach) => (
            <article class="group text-center sm:text-left">
              <header>
                <div class="relative aspect-4/5 rounded-3xl overflow-hidden mb-6 border-2 border-zinc-950/10 group-hover:border-brand-green transition-colors">
                  <Image 
                    src={coach.image} 
                    alt={coach.name} 
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
                  />
                  <div class="absolute inset-0 bg-linear-to-t from-zinc-950/80 via-transparent to-transparent"></div>
                  <div class="absolute bottom-4 left-4 sm:bottom-6 sm:left-6 text-white">
                     <p class="text-brand-green text-[10px] font-black uppercase tracking-[0.2em] mb-1">{coach.role}</p>
                     <h3 class="text-xl sm:text-2xl font-black uppercase italic tracking-tighter">{coach.name}</h3>
                  </div>
                </div>
              </header>
              <div class="px-2 sm:px-0">
                <p class="text-zinc-600 text-sm mb-6 leading-relaxed italic">"{coach.description}"</p>
                <footer class="flex flex-wrap gap-2 justify-center sm:justify-start">
                    {coach.credentials.map(c => (
                      <span class="text-[9px] font-bold px-2 py-1 bg-black rounded text-zinc-50 uppercase tracking-tighter">
                        {c}
                      </span>
                    ))}
                </footer>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
</Layout>