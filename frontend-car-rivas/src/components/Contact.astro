---
import { contactInfo } from "../assets/data/contactInfo.js";
import { schedules } from "../assets/data/schedules.js";


---

<section id="ubicacion" class="py-8 sm:py-12 lg:py-16 2xl:py-20 bg-zinc-100" aria-labelledby="location-title">
  <div class="max-w-7xl 2xl:max-w-screen-2xl mx-auto px-4 sm:px-6">
    
    <div class="text-center mb-12 sm:mb-20">
      <h2 id="location-title" class="text-brand-green text-xs sm:text-sm font-black uppercase mb-3 sm:mb-4">
        Ubicación y Horarios
      </h2>
      <p class="text-2xl sm:text-4xl md:text-5xl 2xl:text-6xl font-black text-zinc-900 tracking-tighter uppercase mb-4 sm:mb-6">
        Te esperamos en el <span class="text-brand-green">CAR RIVAS</span>
      </p>
      <p class="max-w-2xl mx-auto text-zinc-500 text-sm sm:text-lg 2xl:text-xl font-medium">
        Entrena en las mejores instalaciones de Rivas. Fácil acceso y aparcamiento gratuito para socios.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 sm:gap-12 items-start">
      <div class="relative lg:h-full h-64 sm:h-96 rounded-3xl overflow-hidden shadow-2xl grayscale hover:grayscale-0 transition-all duration-700">
        <iframe 
          src="https://www.google.es/maps/place/C.+Severo+Ochoa,+28521,+Madrid/@40.3329298,-3.5252745,17z/data=!3m1!4b1!4m6!3m5!1s0xd423c746f136483:0x11e26755a9294f3c!8m2!3d40.3329257!4d-3.5226996!16s%2Fg%2F11xt898jk?hl=es&entry=ttu&g_ep=EgoyMDI2MDIwNC4wIKXMDSoKLDEwMDc5MjA2OUgBUAM%3D" 
          class="absolute inset-0 w-full h-full border-0" 
          allowfullscreen="" 
          loading="lazy" 
          title="Mapa de ubicación de CAR RIVAS">
        </iframe>
      </div>

      <div class="space-y-6 sm:space-y-8">
        <article class="bg-white rounded-3xl border border-zinc-200 p-5 sm:p-8 shadow-sm">
          <div class="flex items-center gap-3 sm:gap-4 mb-6 sm:mb-8">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-brand-green/10 flex items-center justify-center text-brand-green">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 sm:w-6 sm:h-6"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            </div>
            <h3 class="text-lg sm:text-xl font-black uppercase tracking-tight text-zinc-900">Horarios de Apertura</h3>
          </div>
          
          <div class="space-y-3 sm:space-y-4">
            {schedules.map((item) => (
              <div class="flex items-center justify-between py-3 sm:py-4 border-b border-zinc-100 last:border-0 last:pb-0 group">
                <span class="text-zinc-500 font-bold uppercase text-[10px] sm:text-xs 2xl:text-sm tracking-widest">{item.day}</span>
                <span class="text-zinc-900 font-black tracking-tight text-sm sm:text-base 2xl:text-lg">{item.hours}</span>
              </div>
            ))}
          </div>
        </article>

        <article class="bg-zinc-900 rounded-3xl p-5 sm:p-8 shadow-xl">
          <h3 class="text-lg sm:text-xl font-black uppercase tracking-tight text-white mb-6 sm:mb-8">Información de Contacto</h3>
          <div class="grid gap-3 sm:gap-4">
            {contactInfo.map((info) => (
              <a 
                href={info.href} 
                target={info.label === "Dirección" ? "_blank" : "_self"}
                class="flex items-center gap-3 sm:gap-5 p-3 sm:p-4 rounded-2xl hover:bg-zinc-800 transition-all group"
              >
                <div class="w-10 h-10 sm:w-12 sm:h-12 shrink-0 rounded-xl bg-brand-green flex items-center justify-center text-white transition-transform group-hover:scale-110" set:html={info.icon} />
                <div>
                  <p class="text-[9px] sm:text-[10px] 2xl:text-xs text-zinc-500 font-black uppercase tracking-[0.2em]">{info.label}</p>
                  <p class="text-white text-sm sm:text-base font-bold tracking-tight group-hover:text-brand-green transition-colors 2xl:text-lg">{info.value}</p>
                </div>
              </a>
            ))}
          </div>
        </article>
      </div>
    </div>
  </div>
</section>