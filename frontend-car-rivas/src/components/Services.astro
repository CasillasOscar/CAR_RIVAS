---
import { services } from '../assets/data/services_section.js';
import Calisthenics from '../assets/icons/Calisthenics.astro';
import Football from '../assets/icons/Football.astro';
import Functional from '../assets/icons/Functional.astro';


const iconMap: Record<string, any> = {
  "Futbolistas": Football,
  "Calistenia": Calisthenics,
  "Funcional": Functional,
};
---

<section id="servicios" class="py-12 lg:py-16 2xl:py-20 bg-white" aria-labelledby="services-title">
  <div class="max-w-350 2xl:max-w-screen-2xl mx-auto px-6">
    
    <header class="text-center max-w-3xl mx-auto mb-20 2xl:mb-24">
      <h2 id="services-title" class="text-brand-green text-md 2xl:text-sm font-black uppercase mb-4">
        Nuestros Servicios
      </h2>
      <p class="text-4xl md:text-5xl 2xl:text-6xl font-black text-zinc-900 uppercase mb-6">
        Entrenamiento para cada objetivo
      </p>
      <p class="text-zinc-500 text-lg 2xl:text-xl font-medium leading-relaxed">
        Programas especializados diseñados por profesionales para ayudarte a alcanzar tu máximo potencial físico y técnico.
      </p>
    </header>

    <div class="grid lg:grid-cols-3 gap-4 lg:gap-6 2xl:gap-8">
      {services.map((service, index) => {
        const Icon = iconMap[service.title];
        return (
        <article class="group relative bg-zinc-50 rounded-2xl border border-zinc-200 p-10 2xl:p-12 transition-all duration-300 hover:shadow-2xl hover:shadow-black/5 hover:-translate-y-2">
          
          <div class={`w-14 h-14 2xl:w-16 2xl:h-16 rounded-xl ${service.colorClass} flex items-center justify-center mb-8 2xl:mb-10 shadow-lg shadow-green-900/10`}>
            {Icon && <Icon class="w-8 h-8 2xl:w-10 2xl:h-10 text-white" />}
          </div>

          <div class="relative z-10">
            <header>
              <span class="text-xs 2xl:text-sm font-black text-brand-green uppercase">
                {service.subtitle}
              </span>
              <h3 class="text-2xl 2xl:text-3xl font-black text-zinc-900 mt-2 mb-4 2xl:mb-5 tracking-tight">
                {service.title}
              </h3>
            </header>

            <p class="text-zinc-500 text-sm 2xl:text-base leading-relaxed mb-8 2xl:mb-10 font-medium">
              {service.description}
            </p>

            <ul class="space-y-3 2xl:space-y-4 mb-10 2xl:mb-12 pt-6 2xl:pt-8 border-t border-zinc-200" role="list">
              {service.features.map((feature) => (
                <li class="flex items-center gap-3 text-xs 2xl:text-sm font-bold text-zinc-600 uppercase tracking-wide">
                  <span class="w-1.5 h-1.5 bg-brand-green rounded-full shadow-[0_0_8px_rgba(34,197,94,0.6)]" />
                  {feature}
                </li>
              ))}
            </ul>

            <a 
              href={service.href} 
              class="inline-flex items-center gap-2 text-zinc-900 font-black text-xs 2xl:text-sm uppercase tracking-widest group/link transition-colors hover:text-brand-green"
            >
              Más información
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 2xl:w-5 2xl:h-5 transition-transform group-hover/link:translate-x-1">
                <path d="M5 12h14m-7-7 7 7-7 7"/>
              </svg>
            </a>
          </div>

          <div class="absolute top-8 right-10 2xl:top-12 2xl:right-12 text-6xl 2xl:text-7xl font-black text-zinc-200/50 select-none pointer-events-none group-hover:text-brand-green/10 transition-colors">
            {String(index + 1).padStart(2, "0")}
          </div>
        </article>
      )})}
    </div>
  </div>
</section>